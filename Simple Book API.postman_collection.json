		{
			"name": "List of Fiction Books",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"const response = pm.response.json();\r",
							"\r",
							"const FictionBooks = response.filter((book)=> book.available === true);\r",
							"\r",
							"const book = FictionBooks[1];\r",
							"console.log(book)\r",
							"if (book){\r",
							"\r",
							"pm.globals.set(\"bookfictionId\", book.id);\r",
							"};\r",
							"\r",
							"pm.test(\"Book Found\", () => {\r",
							"   pm.expect(book).to.be.an('object');\r",
							"   pm.expect(book.available).to.be.true;\r",
							"    pm.expect(book.available).to.eql(true);\r",
							"});\r",
							"pm.test(\"Fiction Book Found\",() =>{\r",
							"    pm.expect(book).to.be.an('object');\r",
							"    pm.expect(book.type).to.eql('fiction')\r",
							"});\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/books?type=fiction",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"books"
					],
					"query": [
						{
							"key": "type",
							"value": "fiction"
						},
						{
							"key": "available",
							"value": "true",
							"disabled": true
						}
					]
				}
			},
			"response": []
		},
